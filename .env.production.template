# Production Environment Configuration
# Copy this to .env.production and update with actual values

# Database Configuration
POSTGRES_DB=modernapi_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=REPLACE_WITH_GENERATED_PASSWORD
DATABASE_CONNECTION=Host=postgres;Database=modernapi_prod;Username=postgres;Password=REPLACE_WITH_GENERATED_PASSWORD;Include Error Detail=true

# Redis Configuration  
REDIS_PASSWORD=REPLACE_WITH_GENERATED_PASSWORD

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
JWT_SECRET=REPLACE_WITH_GENERATED_JWT_SECRET
JWT_ISSUER=ModernAPI
JWT_AUDIENCE=ModernAPI-Users
JWT_EXPIRY_MINUTES=60

# API Configuration
API_BASE_URL=https://modernapi.dev
FRONTEND_URL=https://modernapi.dev
CORS_ORIGINS=https://modernapi.dev

# Email Configuration (update with your SMTP provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_SSL=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@modernapi.dev
FROM_NAME=ModernAPI

# Logging
LOG_LEVEL=Information
SEQ_URL=http://seq:5341
SEQ_API_KEY=

# Health Check
HEALTH_CHECK_PATH=/health

# Security
HSTS_MAX_AGE=31536000
REQUIRE_HTTPS=true