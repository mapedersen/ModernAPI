# Development Environment Configuration
ASPNETCORE_ENVIRONMENT=Development

# Authentication
JWT_SECRET=development-jwt-secret-key-minimum-32-characters-for-security-compliance
JWT_ISSUER=ModernAPI.Development
JWT_AUDIENCE=ModernAPI.Users.Development

# Database
POSTGRES_CONNECTION_STRING=Host=localhost;Port=5432;Database=modernapi_dev;Username=modernapi_user;Password=dev_password;

# Logging & Monitoring
SEQ_URL=http://localhost:5341
SEQ_API_KEY=
LOG_LEVEL=Debug

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ModernAPI.Development

# CORS - Allow local development servers
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,https://localhost:3000,https://localhost:5173

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
ENABLE_SENSITIVE_DATA_LOGGING=true

# Performance Settings
MAX_REQUEST_BODY_SIZE=10485760
REQUEST_TIMEOUT_SECONDS=30

# Cache Settings
CACHE_DEFAULT_EXPIRATION_MINUTES=60
ENABLE_RESPONSE_CACHING=true

# Redis Distributed Cache (Development)
REDIS_CONNECTION_STRING=localhost:6379,password=dev_redis_password
REDIS_PASSWORD=dev_redis_password
REDIS_PORT=6379