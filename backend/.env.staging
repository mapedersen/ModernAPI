# Staging Environment Configuration
ASPNETCORE_ENVIRONMENT=Staging

# Authentication - Use secret manager or environment variables from hosting platform
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_ISSUER=ModernAPI.Staging
JWT_AUDIENCE=ModernAPI.Users.Staging

# Database - Use managed database service
POSTGRES_CONNECTION_STRING=${STAGING_DATABASE_URL}

# Logging & Monitoring
SEQ_URL=${STAGING_SEQ_URL}
SEQ_API_KEY=${STAGING_SEQ_API_KEY}
LOG_LEVEL=Information

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=${STAGING_OTEL_ENDPOINT}
OTEL_SERVICE_NAME=ModernAPI.Staging

# CORS - Allow staging frontend domains
CORS_ORIGINS=${STAGING_CORS_ORIGINS}

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=false
ENABLE_SENSITIVE_DATA_LOGGING=false

# Performance Settings
MAX_REQUEST_BODY_SIZE=10485760
REQUEST_TIMEOUT_SECONDS=30

# Cache Settings
CACHE_DEFAULT_EXPIRATION_MINUTES=30
ENABLE_RESPONSE_CACHING=true