# ModernAPI Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production and update values

# =====================================
# ENVIRONMENT CONFIGURATION
# =====================================
ASPNETCORE_ENVIRONMENT=Development

# =====================================
# AUTHENTICATION & SECURITY
# =====================================
# JWT Configuration - MUST be at least 32 characters for security
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-for-production-use
JWT_ISSUER=ModernAPI
JWT_AUDIENCE=ModernAPI.Users

# =====================================
# DATABASE CONFIGURATION
# =====================================
# PostgreSQL Connection
POSTGRES_CONNECTION_STRING=Host=localhost;Port=5432;Database=modernapi;Username=modernapi_user;Password=your_secure_password_here;

# Legacy Docker Environment Variables (for docker-compose compatibility)
POSTGRES_DB=modernapi
POSTGRES_USER=modernapi_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# =====================================
# LOGGING & MONITORING
# =====================================
# Structured Logging
SEQ_URL=http://localhost:5341
SEQ_API_KEY=your-seq-api-key-here
LOG_LEVEL=Information

# OpenTelemetry & Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ModernAPI

# =====================================
# CORS & SECURITY
# =====================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# =====================================
# FEATURE FLAGS
# =====================================
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
ENABLE_SENSITIVE_DATA_LOGGING=false

# =====================================
# PERFORMANCE & CACHING
# =====================================
MAX_REQUEST_BODY_SIZE=10485760
REQUEST_TIMEOUT_SECONDS=30
CACHE_DEFAULT_EXPIRATION_MINUTES=60
ENABLE_RESPONSE_CACHING=true

# Redis Distributed Cache
REDIS_CONNECTION_STRING=localhost:6379,password=your_redis_password_here
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# =====================================
# SECURITY HEADERS (Production)
# =====================================
ENABLE_HSTS=false
HTTPS_REDIRECT=false