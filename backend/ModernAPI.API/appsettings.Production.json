{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Error",
      "ModernAPI": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "AccessTokenExpiryInMinutes": 15,
    "RefreshTokenExpiryInDays": 3,
    "RememberMeExpiryInDays": 7
  },
  "Database": {
    "CommandTimeout": 120,
    "EnableAutomaticMigrations": false,
    "EnableDataSeeding": false,
    "MaxRetryCount": 5,
    "MaxRetryDelay": "00:00:10"
  },
  "Features": {
    "EnableSwagger": false,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  }
}