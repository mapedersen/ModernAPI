{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "JwtSettings": {
    "AccessTokenExpiryInMinutes": 15,
    "RefreshTokenExpiryInDays": 7,
    "RememberMeExpiryInDays": 30
  },
  "Database": {
    "CommandTimeout": 60,
    "EnableAutomaticMigrations": false,
    "EnableDataSeeding": false,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:05"
  }
}