# Local Production Testing Environment
# Copy this to .env for local production testing
# DO NOT COMMIT THIS FILE

ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
POSTGRES_DB=modernapi_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=localtest123!
DATABASE_CONNECTION=Host=postgres;Database=modernapi_prod;Username=postgres;Password=localtest123!;Include Error Detail=true

# Redis Configuration  
REDIS_PASSWORD=localredis123!

# JWT Authentication
JWT_SECRET=ThisIsAVeryLongLocalTestJWTSecretKeyForProductionTestingWithAtLeast32Characters123456789!
JWT_ISSUER=ModernAPI
JWT_AUDIENCE=ModernAPI.Users
JWT_EXPIRY_MINUTES=60

# CORS & API Configuration
CORS_ORIGINS=http://localhost:3001
API_BASE_URL=http://localhost:5001

# Production Security Settings
ENABLE_SWAGGER=true  # Set to true for local testing
ENABLE_DETAILED_ERRORS=true  # Set to true for local debugging
ENABLE_SENSITIVE_DATA_LOGGING=false
LOG_LEVEL=Information  # More verbose for local testing
ENABLE_HSTS=false  # Disable for local testing
HTTPS_REDIRECT=false  # Disable for local testing